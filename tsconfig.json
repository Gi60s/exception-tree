{
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.string",
      "es2020.symbol.wellknown"
    ],
    "module": "UMD",
    "target": "es2019",

    "outDir": "./dist",
    "rootDir": "./src",
    "sourceRoot": "./src",

    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "esModuleInterop": true,

    "declaration": true,
    "sourceMap": true,
    "strict": true
  }
}
